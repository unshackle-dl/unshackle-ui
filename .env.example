# API Keys (get these from the respective services)
TMDB_API_KEY=your_tmdb_api_key_here
SIMKL_API_KEY=your_simkl_api_key_here

# Database Configuration
DATABASE_PATH=./data/cache.db

# API Configuration
DEFAULT_COUNTRY=US
MAX_RESULTS_PER_SOURCE=20
ENABLE_DEDUPLICATION=true
DEFAULT_SEARCH_TYPE=all

# Cache TTL (in seconds)
CACHE_TTL_SEARCH=3600        # 1 hour for search results
CACHE_TTL_DETAILS=7200       # 2 hours for title details
CACHE_TTL_RATINGS=86400      # 24 hours for ratings
CACHE_TTL_OFFERS=21600       # 6 hours for streaming offers
CACHE_TTL_METADATA=604800    # 7 days for title metadata

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60